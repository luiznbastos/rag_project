# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "rag-project"
environment  = "dev"

# EC2 Configuration
instance_type  = "t3.small"  # Adjust based on needs (t3.small, t3.medium, t3.large)
key_pair_name  = "rag-project-key"  # Must exist in your AWS account

# Network Configuration
# IMPORTANT: Replace with your actual IP address for security
# Get your IP: curl https://checkip.amazonaws.com
developer_ip = "0.0.0.0/0"  # WARNING: This allows access from anywhere. Use your specific IP!

# Database Configuration
db_instance_class          = "db.t3.micro"  # Adjust for production (db.t3.small, db.t3.medium)
db_name                    = "rag_db"
db_username                = "rag_admin"
db_port                    = 5432
db_allocated_storage       = 20  # GB
db_backup_retention_period = 7   # days
enable_multi_az            = false  # Set to true for production high availability

